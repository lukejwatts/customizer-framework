{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/lukejwatts/customizer-framework/blob/main/schemas/field.json",
    "title": "Customizer Framework field.json schema",
    "description": "Configure a new field in the Customizer",
    "type": "object",
    "required": ["id", "section"],
    "oneOf": [
        {
            "properties": {
                "label": {
                    "description": "Label of the field (required)",
                    "type": "string"
                },
                "title": {
                    "description": "Title of the field (required)",
                    "type": "string"
                }
            }
        }
    ],
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "audio-uploader",
                "button-set",
                "checkbox",
                "checkbox-multiple",
                "checkbox-pill",
                "code-editor",
                "color-picker",
                "color-set",
                "content-editor",
                "date-picker",
                "dropdown-custom-post",
                "dropdown-page",
                "dropdown-post",
                "email",
                "file-uploader",
                "image-checkbox",
                "image-radio",
                "image-uploader",
                "markup",
                "numeric",
                "radio",
                "range",
                "select",
                "size",
                "sortable",
                "switch",
                "tagging",
                "tagging-select",
                "text",
                "textarea",
                "time-picker",
                "toggle",
                "url",
                "video-uploader"
            ]
        },
        "id": {
            "description": "ID of the field (required)",
            "type": "string"
        },
        "description": {
            "description": "Description of the field (optional)",
            "type": "string"
        },
        "priority": {
            "description": "Priority of the field (optional)",
            "type": "integer",
            "minimum": 0
        },
        "section": {
            "description": "ID of the section this field belongs to (required)",
            "type": "string"
        }
    }
}
