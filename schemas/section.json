{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://github.com/lukejwatts/customizer-framework/blob/main/schemas/section.json",
    "title": "Customizer Framework schema.json schema",
    "description": "Configure a new section in the Customizer",
    "type": "object",
    "required": ["id", "title", "panel"],
    "properties": {
        "id": {
            "description": "ID of the section (required)",
            "type": "string"
        },
        "title": {
            "description": "Title of the section (required)",
            "type": "string"
        },
        "description": {
            "description": "Description of the section (optional)",
            "type": "string"
        },
        "priority": {
            "description": "Description of the section (optional)",
            "type": "integer",
            "minimum": 0
        },
        "panel": {
            "description": "ID of the panel this section belongs to (required)",
            "type": "string"
        },
        "fields": {
            "description": "Fields to be added to this section",
            "type": "array",
            "minItems": 1,
            "items": {
                "$ref": "https://github.com/lukejwatts/customizer-framework/blob/main/schemas/field.json"
            }
        }
    }
}
